  <script>
    // slider
    const slides = document.querySelector('.slides');
    const slideCount = document.querySelectorAll('.slides img').length;
    const prev = document.querySelector('.prev');
    const next = document.querySelector('.next');
    let idx = 0;
    function go(i){ idx = (i + slideCount) % slideCount; slides.style.transform = `translateX(-${idx*100}%)`; }
    prev.addEventListener('click', ()=>go(idx-1));
    next.addEventListener('click', ()=>go(idx+1));

    // menu
    const menuBtn = document.getElementById('menuBtn');
    const sideMenu = document.getElementById('sideMenu');
    const menuClose = document.getElementById('menuClose');
    menuBtn.addEventListener('click', ()=> sideMenu.classList.add('open'));
    menuClose.addEventListener('click', ()=> sideMenu.classList.remove('open'));
  </script>
